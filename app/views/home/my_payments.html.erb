<div class="container  py-5">
  <h1 class="mb-3">Zakat Payments by <%= current_user.name%></h1>

  <table>
    <thead>
      <tr>
        <th>Cash</th>
        <th>Credit</th>
        <th>Debit</th>
        <th>Assets</th>
        <th>Current nisab</th>
        <th>Zakat paid</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.cash %></td>
        <td><%= payment.credit %></td>
        <td><%= payment.debit %></td>
        <td><%= payment.assets %></td>
        <td><%= payment.current_nisab %></td>
        <td><%= payment.zakat_paid %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
      <tr class="bg-info text-white">
        <td colspan=5 class="text-right"><strong>Total Amount Paid to date:</strong></td>
        <td colspan=4><strong><%= current_user.payments.sum(:zakat_paid)%></strong></td>
      </tr>

    </tbody>
  </table>

  <br>

  <%= link_to 'New Payment', "/calculator" %>

</div>